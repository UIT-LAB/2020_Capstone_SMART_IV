<%- include('../include/header.ejs') %>
<link rel="stylesheet" href="/stylesheets/mng.css"/>
<section>
    <div id="info_content" class="row mt-4 pl-2">
        <%- include('../include/menubar.ejs') %>
        <div id="content" class="col text-center">
            <h1 id="content_header">공지사항</h1>
            <table class="table table-hover">
                <thead>
                  <tr>
                    <th scope="col">순 번</th>
                    <th scope="col">제 목</th>
                    <th scope="col">작 성 자</th>
                  </tr>
                </thead>
                <tbody>
                    <%for(key in db_data){%>
                        <tr style="cursor:pointer;" data-toggle="modal" data-target="#modal<%=key%>">
                            <th scope="row" ><%=db_data[key].nid%></th>
                            <td><%=db_data[key].title%></td>
                            <td><%=db_data[key].writer%></td>
                        </tr>
                        <div class="modal fade" id="modal<%=key%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                              <div class="modal-content">
                                <div class="modal-header">
                                  <h5 class="modal-title" id="exampleModalLabel"><%=db_data[key].title%></h5>
                                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                  </button>
                                </div>
                                <div class="modal-body">
                                    <%=db_data[key].content%>
                                </div>
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                </div>
                              </div>
                            </div>
                        </div>
                    <%}%>                  
                </tbody>
              </table>                 
            
        </div>
    </div>
</section>

<%- include('../include/footer.ejs') %>

<style>
    #content{
        max-width:90%;
        padding:0;
        margin-left:50px
    }
    .contents{
        color:red;
    }
    section{
        width:90%;
    }
</style>