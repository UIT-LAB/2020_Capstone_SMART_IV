<%
    var floor = [
        {
            "images" : ["1.jpg", "2.jpg"],
            "header" : ["this is 1", "this is 2"],
            "content" : ["hello 1", "hello 2"]
        },{
            "images" : ["2.jpg", "3.jpg"],
            "header" : ["this is 2", "this is 3"],
            "content" : ["hello 2", "hello 3"]
        },{
            "images" : ["1.jpg", "3.jpg"],
            "header" : ["this is 1", "this is 3"],
            "content" : ["hello 1", "hello 3"]
        }
    ]
%>

<%- include('../include/header.ejs') %>
<link rel="stylesheet" href="/stylesheets/mng.css"/>
<section>
    <div id="info_content" class="row mt-4 pl-2">
        <%- include('../include/menubar.ejs') %>
        <div id="content" class="col text-center">
            <h1 id="content_header">층별 안내</h1>
            <%for(key in floor){%>
                <h4 class="text-left"><%=Number(key)+1%>층</h4>
                <div id="floor<%=Number(key)+1%>" class="carousel slide carousel-fade" data-ride="carousel">
                    <div class="carousel-inner">
                        <%for(num in floor[key].images){%>
                            <%=floor[key].images[num]%>
                            <%if(num==0){%>
                                <div class="carousel-item active">
                            <%}else{%>
                                <div class="carousel-item">
                            <%}%>
                                <img src="/images/<%=floor[key].images[num]%>" class="d-block w-100">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5><%=floor[key].header[num]%></h5>
                                    <p><%=floor[key].content[num]%></p>
                                </div>
                            </div>
                        <%}%>
                    </div>
                    <a class="carousel-control-prev" href="#floor<%=Number(key)+1%>" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#floor<%=Number(key)+1%>" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                    </a>
                </div>
            <%}%>
        </div>
    </div>
</section>
<%- include('../include/footer.ejs') %>

<style>
    .carousel img{
        height:15rem;
    }
    .carousel{
        margin-bottom:50px;
    }
</style>